<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.korsolution.kontin.teamusedcar.AddUsedCar6PhotoInnerActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="2dp"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/imgCarInner1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@color/Gray"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imgTakePhotoCarInner1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:alpha="0.7"
                    android:background="@drawable/circle_background"
                    android:paddingRight="2dp"
                    android:src="@drawable/takephoto_black" />

                <TextView
                    android:id="@+id/txtCarInner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="1dp"
                    android:background="@color/Transparent_Black"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/car_inner_th"
                    android:textColor="@color/White"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/imgCarInner2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@color/Gray"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imgTakePhotoCarInner2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:alpha="0.7"
                    android:background="@drawable/circle_background"
                    android:paddingRight="2dp"
                    android:src="@drawable/takephoto_black" />

                <TextView
                    android:id="@+id/txtCarInner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="1dp"
                    android:background="@color/Transparent_Black"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/car_inner_th"
                    android:textColor="@color/White"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp">

                <ImageView
                    android:id="@+id/imgCarInner3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@color/Gray"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imgTakePhotoCarInner3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:alpha="0.7"
                    android:background="@drawable/circle_background"
                    android:paddingRight="2dp"
                    android:src="@drawable/takephoto_black" />

                <TextView
                    android:id="@+id/txtCarInner3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="1dp"
                    android:background="@color/Transparent_Black"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/car_inner_th"
                    android:textColor="@color/White"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp">

                <ImageView
                    android:id="@+id/imgCarInner4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@color/Gray"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imgTakePhotoCarInner4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:alpha="0.7"
                    android:background="@drawable/circle_background"
                    android:paddingRight="2dp"
                    android:src="@drawable/takephoto_black" />

                <TextView
                    android:id="@+id/txtCarInner4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="1dp"
                    android:background="@color/Transparent_Black"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/car_inner_th"
                    android:textColor="@color/White"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp">

                <ImageView
                    android:id="@+id/imgCarInner5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@color/Gray"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imgTakePhotoCarInner5"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:alpha="0.7"
                    android:background="@drawable/circle_background"
                    android:paddingRight="2dp"
                    android:src="@drawable/takephoto_black" />

                <TextView
                    android:id="@+id/txtCarInner5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="1dp"
                    android:background="@color/Transparent_Black"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/car_inner_th"
                    android:textColor="@color/White"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="4dp"
                android:paddingLeft="2dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp">

                <Button
                    android:id="@+id/btnNext"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="@string/next" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
