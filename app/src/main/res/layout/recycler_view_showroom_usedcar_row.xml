<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@color/Gray"
                    android:scaleType="centerCrop"
                    android:src="@drawable/blank_img" />

                <RelativeLayout
                    android:id="@+id/layoutDetail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/txtBrand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="2dp"
                            android:text="Brand"
                            android:textColor="@color/title_red"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtLicensePlate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ทะเบียน : "
                            android:textColor="@color/Black"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtStartPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Price"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/txtBidPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bid Price"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/txtPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/txtStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/txtApprove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Approve"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Date"
                            android:visibility="gone" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgSold"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sold"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgNext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_navigate_next" />
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

            <com.anton46.stepsview.StepsView
                android:id="@+id/stepsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>